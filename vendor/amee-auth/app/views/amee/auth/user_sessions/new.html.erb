<%= form_for @user_session, :url => user_session_path, :html => {:class => "login-form"} do |f| -%>
    <h2>Login</h2>
    <div class="labelfield">
      <div class="label"><%= f.label 'Username' %></div>
      <div class="field"><%= f.text_field :login %></div>
    </div>
    <div class="labelfield">
      <div class="label"><%= f.label 'Password' %></div>
      <div class="field"><%= f.password_field :password %></div>
    </div>
    <div class="labelfield"><div class="submit"><%= submit_tag 'Log in' %></div></div>
    <div class="labelfield"><div class="submit"><%= link_to("Forgot your password?", new_password_reset_path) %></div></div>
<% end -%>