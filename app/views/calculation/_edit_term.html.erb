<% if term.drop_down? %>
  <%= term_choices_select_tag(term,:onchange => js_for_calculation_update(term,:value)) %>
<%else%>
  <%= term_input_tag(term, :onchange => js_for_calculation_update(term,:value)) %>
  <% unless term.default_unit.nil? %>
    <%= term_unit_select_tag(term,:onchange => js_for_calculation_update(term,:unit)) %>
  <% end %>
  <% unless term.default_per_unit.nil? %>
    <%= "/" %>
    <%= term_per_unit_select_tag(term, :onchange => js_for_calculation_update(term,:per_unit)) %>
  <% end %>
<%end%>