<% row_id = "row-#{rand(1e8)}" %>
<tr id="<%= row_id%>">
<% optional = session[calculation.label][:show_optional] %>
<% calculation_terms_in_table_order(calculation,optional,false).each do |term|%>
  <td class="<%= html_class_for_term(term,:edit)%>">
    <%= render 'edit_term', :term => term %>
  </td>
<% end %>
<% unless calculation.outputs.visible.empty? %>
  <% calculation.outputs.visible.each do |term|%>
    <%= show_term_tag(term,:tag => :td,:decimal_places => 2) %>
  <%end%>
<% else %>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
<% end %>
<% delete_symbol = image_tag "delete.png", :alt => 'Delete' %>
<td class="delete_row"><%= link_to_remote delete_symbol,
                                          :url => delete_path(:id => calculation.id, :row => row_id),
                                          :before => visual_effect(:fade, row_id, :duration => 1) %></td>
</tr>