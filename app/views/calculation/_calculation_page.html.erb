<h2><%= @prototype_calculation.name %></h2>
<% optional = session[prototype_calc.label][:show_optional] %>
<div class="links">
  <div class="link">
    <%= link_to_remote 'Add another calculation', :url => add_path(:type => prototype_calc.label) %>
  </div>
  <% if optional %>
    <div class="link">
      <%= link_to_remote 'Show compulsory inputs only', :url => index_path(:type => prototype_calc.label,
                                                                           :show_optional => 'false') %>
    </div>
  <% else %>
    <div class="link">
    <%= link_to_remote 'Show optional inputs', :url => index_path(:type => prototype_calc.label,
                                                                  :show_optional => 'true') %>
    </div>
  <% end %>
  <div id="ajaxloader" class="link" style="display:none;"><%= image_tag 'loading.gif' %></div>
</div>
<br />
<div class="table_container">
  <table id="table">
    <tr>
      <% style = "whitespace: no-wrap; color: #404040; font-size: 1.25em; font-family: 'Trebuchet MS', Helvetica, sans-serif; width: 100%; display: inherit;" %>
      <% prototype_calc.inputs.compulsory.visible.each do |term| %>
        <th><%=term.name%></th>
      <%end%>
      <% if optional %>
        <% prototype_calc.inputs.optional.visible.each do |term| %>
          <th><%=term.name%></th>
        <%end%>
      <%end%>
      <% prototype_calc.outputs.each do |term| %>
        <th><%=term.name%></th>
        <th></th>
        <th></th>
        <th></th>
      <%end%>
      <th></th>
    </tr>
    <% calculations.each do |calc| %>
      <tr><%= render 'edit_row', :calculation=>calc, :optional => optional %></tr>
    <%end%>
    <tr id="totals">
      <%= render("total_row", :calculations => calculations, :prototype_calc => prototype_calc, :optional => optional) unless calculations.empty? %>
    </tr>
  </table>
  <div style="clear:both;"></div>
</div>