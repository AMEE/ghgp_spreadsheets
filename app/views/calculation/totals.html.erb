<div id="totals_page">
  <h2>Emissions Summary</h2>
<br />
<br />
<table>
  <tr>
    <th>Process</th>
    <th>Total CO2e</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @sums.each do |proto,proto_sum| %>
    <tr>
      <% style = "border: 1px solid White; background: White ; color: Darkgray; font-size: 1.5em; font-family: 'Trebuchet MS', Helvetica, sans-serif; vertical-align: middle; text-align: right; padding-right: 5px; width: 100%; display: inherit;" %>
      <td><span style="<%= style %>"><%= proto.name %></span></td>
      <% unless proto_sum.nil? %>
        <td><span style="<%= style %>"><%= proto_sum.value.round(1) %></span></td>
        <td><span style="<%= style %>"><%= proto_sum.unit.symbol if proto_sum.unit %></span></td>
        <td><span style="<%= style %>">/</span></td>
        <td><span style="<%= style %>"><%= proto_sum.per_unit.symbol if proto_sum.per_unit %></span></td>
      <% else %>
        <td><span style="<%= style %>"></span></td>
        <td><span style="<%= style %>"></span></td>
        <td><span style="<%= style %>"></span></td>
        <td><span style="<%= style %>"></span></td>
      <% end %>
    </tr>
  <% end %>
  <% unless @sum.nil? %>
  <tr>
    <% style = "border: 1px solid White; background: White ; color: Black; font-size: 1.5em; font-family: 'Trebuchet MS', Helvetica, sans-serif; vertical-align: middle; text-align: right; padding-right: 5px; width: 100%; display: inherit;" %>
    <td></td>
    <td><span style="<%= style %>"><%= @sum.value.round(1) %></span></td>
    <td><span style="<%= style %>"><%= @sum.unit.symbol %></span></td>
    <td><span style="<%= style %>">/</span></td>
    <td><span style="<%= style %>"><%= @sum.per_unit.symbol %></span></td>
  </tr>
  <% end %>
</table>
</div>