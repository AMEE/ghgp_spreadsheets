<div id="header">
  <div id="header_tabs">
    <% if logged_in? %>
      <% if current_user.is_admin? %>
        <div class="tab">
          <%= link_to 'admin', users_path %>
        </div>
      <% end %>
      <div class="tab">
        <%= link_to "calculate", summary_path %>
      </div>
      <div class="tab">
        <%= link_to "help", help_path %>
      </div>
      <div class="tab">
        <%= link_to 'settings', edit_user_path(current_user.id) %>
      </div>
      <div class="tab">
        <%= link_to 'logout', user_session_path(current_user_session.id), :method => 'delete' %>
      </div>
    <% end %>
  </div>
</div>
<div id="contentarea">